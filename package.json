{
  "name": "Websocket",
  "version": "1.0.50",
  "type": "module",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "bun run --watch src/index.ts",
    "dev:prod": "export NODE_ENV=production && bun run --watch src/index.ts",
    "start": "bun run src/index.ts",
    "format": "prettier --write . && biome format --write .",
    "lint": "eslint .",
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,jsonc,toml}": [
      "biome format --write"
    ]
  },
  "dependencies": {
    "@elysiajs/cors": "^1.4.0",
    "@elysiajs/static": "^1.4.7",
    "@elysiajs/swagger": "^1.3.1",
    "elysia": "latest",
    "ioredis": "^5.8.2",
    "mongoose": "^8.20.0",
    "pino": "^10.1.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.6",
    "@types/bun": "^1.3.3",
    "bun-types": "latest",
    "dotenv": "^17.2.3",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-unused-imports": "^4.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "pino-pretty": "^13.1.2",
    "prettier": "^3.6.2"
  },
  "module": "src/index.js",
  "peerDependencies": {
    "typescript": "^5.9.3"
  }
}
