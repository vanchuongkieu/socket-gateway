{
  "compilerOptions": {
    "target": "ES2021",
    "jsx": "preserve",
    "module": "ES2022",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "bundler",
    "types": ["bun-types"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@server": ["./src/index.ts"],
      "@server/*": ["./src/*"],
      "@client/*": ["./client/*"]
    }
  },
  "include": ["src/**/*.ts", "src/types/**/*.d.ts"]
}
